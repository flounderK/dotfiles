run_watch DHCP {
    pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
    pidfile = "/var/run/vpnc/pid"
}

tztime local {
    format = "%A %e %B %Y   %H:%M"
}

load {
    format = "%1min"
}

cpu_usage {
    format = "%usage"
}

cpu_temperature 0 {
	format = "%degreesÂ°C"
}

disk "/" {
	format = "%avail"
	prefix_type	= custom
	low_threshold = 20
	threshold_type = percentage_avail
}

disk "/data" {
        format = "%avail"
        prefix_type     = custom
        low_threshold = 20
        threshold_type = percentage_avail
}


volume master {
    format = "%volume"
    format_muted = " "
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

