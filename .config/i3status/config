general {
    interval = 1
    colors = true
    color_good = '#88b090'
    color_degraded = '#ccdc90'
    color_bad = '#e89393'
}

order += "volume master"
order += "disk /"
order += "disk /data"
#order += "disk /home"
#order += "run_watch DHCP"
#order += "ipv6"
